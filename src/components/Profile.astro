---
const { translations } = Astro.props;
---

<div class="profile">
    <img class="profile-picture" src="/perfil.jpeg" alt="" />
    <div class="profile-info">
        <div class="profile-header">
            <p class="profile-name">{translations?.profile?.nombre}</p>
            <div class="profile-location">
                <img class="country-flag" src="/arg.png" alt="" />
                <p class="location-text">{translations?.profile?.ciudad}</p>
            </div>
        </div>
        <p class="profile-description">
            {translations?.profile?.descripcion}
        </p>
    </div>
</div>
